<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Listener.VitrinetListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarServlet</servlet-name>
        <servlet-class>Controller.CadastrarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TesteServlet</servlet-name>
        <servlet-class>Controller.TesteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarrinhoServlet</servlet-name>
        <servlet-class>Controller.CarrinhoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdmServlet</servlet-name>
        <servlet-class>Controller.AdmServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContatoServlet</servlet-name>
        <servlet-class>Controller.ContatoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoServlet</servlet-name>
        <servlet-class>Controller.InfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarCadastroServlet</servlet-name>
        <servlet-class>Controller.AlterarCadastroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarServlet</servlet-name>
        <url-pattern>/Cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TesteServlet</servlet-name>
        <url-pattern>/Teste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarrinhoServlet</servlet-name>
        <url-pattern>/CarrinhoPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdmServlet</servlet-name>
        <url-pattern>/Adm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContatoServlet</servlet-name>
        <url-pattern>/Contato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoServlet</servlet-name>
        <url-pattern>/Info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarCadastroServlet</servlet-name>
        <url-pattern>/AlterarCadastro</url-pattern>
    </servlet-mapping>
    
<servlet>         
<servlet-name>Mensagem</servlet-name>
<jsp-file>/WEB-INF/logadomensagem.jsp</jsp-file>
</servlet>

<servlet-mapping>
<servlet-name>Mensagem</servlet-name>
<url-pattern>/Mensagem</url-pattern>
</servlet-mapping>

<servlet>         
<servlet-name>Indexlogado</servlet-name>
<jsp-file>/WEB-INF/logado.jsp</jsp-file>
</servlet>

<servlet-mapping>
<servlet-name>Indexlogado</servlet-name>
<url-pattern>/Indexlogado</url-pattern>
</servlet-mapping>

<servlet>         
<servlet-name>Carrinhologado</servlet-name>
<jsp-file>/WEB-INF/logadocarrinho.jsp</jsp-file>
</servlet>

<servlet-mapping>
<servlet-name>Carrinhologado</servlet-name>
<url-pattern>/Carrinhologado</url-pattern>
</servlet-mapping>


      <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
